<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Add Property</title>

    <!-- Custom fonts for this template-->
    <link
      href="vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->
    <link href="stylesheet/css/sb-admin-2.min.css" rel="stylesheet" />
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        /* padding: 20px;  */
        color: #333;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        /* box-shadow: 0 0 10px rgba(0,0,0,0.1); */
        border-radius: 5px;
      }
      h1 {
        text-align: center;
        margin-bottom: 30px;
      }
      .form-group {
        margin-bottom: 14px;
      }
      label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
      }
      .lable-heading {
        font-weight: 600;
        color: rgb(7, 100, 147);
      }
      input[type="text"],
      input[type="number"],
      textarea,
      select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
      }
      textarea {
        height: 100px;
      }
      .checkbox-group {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }
      .checkbox-item {
        display: flex;
        align-items: center;
        width: calc(33% - 10px);
      }
      .checkbox-item input {
        margin-right: 5px;
      }
      .rules-group {
        display: flex;
        gap: 20px;
        margin-top: 10px;
      }
      .rules-item {
        display: flex;
        align-items: center;
      }
      .rules-item input {
        margin-right: 5px;
      }
      button {
        background-color: #4caf50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
      }
      button:hover {
        background-color: #45a049;
      }
      .capacity-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
      }
      .capacity-item {
        flex: 1;
        min-width: 120px;
      }
      .image-upload {
        margin-top: 10px;
      }
      input[type="checkbox"]:checked {
        accent-color: red;
      }
    </style>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%-include("layout/sidebar.ejs")%>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%-include("layout/topbar.ejs")%>
          <!-- End of Topbar -->

          <!-- Begin Create property  -->

          <p
            style="
              color: rgb(0, 0, 0);
              text-align: start;
              padding-left: 20px;
              font-size: xx-large;
            "
          >
            Create New Property
          </p>
          <hr />
          <div class="container">
            <form
              enctype="multipart/form-data"
              action="/create-property"
              method="post"
            >
              <!-- Basic Information -->
              <div class="form-group">
                <label for="title" class="lable-heading">Property Title*</label>
                <input type="text" id="title" name="title" required />
              </div>

              <div class="form-group">
                <label for="description" class="lable-heading"
                  >Description</label
                >
                <textarea id="description" name="description"></textarea>
              </div>
              <!-- category  -->
              <div class="form-group">
                <label for="category" class="lable-heading">Category</label>
                <select id="category" name="category" required>
                  <option value="">Select category type</option>
                  <option value="Amazing views">Amazing views</option>
                  <option value="Beachfronts">Beachfronts</option>
                  <option value="Castles">Castles</option>
                  <option value="Lake">Lake</option>
                  <option value="New">New</option>
                  <option value="Mansions">Mansions</option>
                  <option value="OMG!">OMG!</option>
                  <option value="Rooms">Rooms</option>
                  <option value="Top cities">Top cities</option>
                  <option value="Top of the world">Top of the world</option>
                </select>
              </div>

              <!-- Property Type -->
              <div class="form-group">
                <label for="propertyType" class="lable-heading"
                  >Property Type*</label
                >
                <select id="propertyType" name="propertyType" required>
                  <option value="">Select property type</option>
                  <option value="Apartment">Apartment</option>
                  <option value="Farm stay">Farm Stay</option>
                  <option value="House">House</option>
                  <option value="Villa">Villa</option>
                  <option value="Cabin">Cabin</option>
                  <option value="Hotel">Hotel</option>
                  <option value="Guesthouse">Guesthouse</option>
                  <option value="Unique">Unique</option>
                  <option value="Tree House">Tree House</option>
                </select>
              </div>
              <div class="form-group">
                <label for="roomType" class="lable-heading">Room Type*</label>
                <select id="roomType" name="roomType" required>
                  <option value="">Select room type</option>
                  <option value="entire">Entire place</option>
                  <option value="private">Private room</option>
                  <option value="shared">Shared room</option>
                </select>
              </div>

              <!-- Location -->
              <div class="form-group">
                <label for="location" class="lable-heading">Location*</label>
                <input type="text" id="location" name="location" required />
              </div>

              <!-- Capacity -->
              <div class="form-group">
                <label class="lable-heading">Capacity*</label>
                <hr />
                <div class="capacity-group">
                  <div class="capacity-item">
                    <label for="guests">Guests</label>
                    <input
                      type="number"
                      id="guests"
                      name="capacity[guests]"
                      min="1"
                      required
                    />
                  </div>
                  <div class="capacity-item">
                    <label for="bedrooms">Bedrooms</label>
                    <input
                      type="number"
                      id="bedrooms"
                      name="capacity[bedrooms]"
                      min="1"
                      required
                    />
                  </div>
                  <div class="capacity-item">
                    <label for="beds">Beds</label>
                    <input
                      type="number"
                      id="beds"
                      name="capacity[beds]"
                      min="1"
                      required
                    />
                  </div>
                  <div class="capacity-item">
                    <label for="bathrooms">Bathrooms</label>
                    <input
                      type="number"
                      id="bathrooms"
                      name="capacity[bathrooms]"
                      min="1"
                      required
                    />
                  </div>
                </div>
              </div>

              <!-- Amenities -->
              <div class="form-group">
                <label class="lable-heading">Amenities</label>
                <hr />
                <div class="checkbox-group">
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="wifi"
                      name="amenities"
                      value="wifi"
                    />
                    <label for="wifi">WiFi</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="kitchen"
                      name="amenities"
                      value="kitchen"
                    />
                    <label for="kitchen">Kitchen</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="washer"
                      name="amenities"
                      value="washer"
                    />
                    <label for="washer">Washer</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="dryer"
                      name="amenities"
                      value="dryer"
                    />
                    <label for="dryer">Dryer</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="ac"
                      name="amenities"
                      value="ac"
                    />
                    <label for="ac">Air Conditioning</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="heating"
                      name="amenities"
                      value="heating"
                    />
                    <label for="heating">Heating</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="tv"
                      name="amenities"
                      value="tv"
                    />
                    <label for="tv">TV</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="pool"
                      name="amenities"
                      value="pool"
                    />
                    <label for="pool">Pool</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="parking"
                      name="amenities"
                      value="parking"
                    />
                    <label for="parking">Parking</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="elevator"
                      name="amenities"
                      value="elevator"
                    />
                    <label for="elevator">Elevator</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="workspace"
                      name="amenities"
                      value="workspace"
                    />
                    <label for="workspace">Workspace</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="hot_tub"
                      name="amenities"
                      value="hot_tub"
                    />
                    <label for="hot_tub">Hot Tub</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="breakfast"
                      name="amenities"
                      value="breakfast"
                    />
                    <label for="breakfast">Breakfast</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="gym"
                      name="amenities"
                      value="gym"
                    />
                    <label for="gym">Gym</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="fireplace"
                      name="amenities"
                      value="fireplace"
                    />
                    <label for="fireplace">Fireplace</label>
                  </div>
                  <div class="checkbox-item">
                    <input
                      type="checkbox"
                      id="iron"
                      name="amenities"
                      value="iron"
                    />
                    <label for="iron">Iron</label>
                  </div>
                </div>
              </div>

              <!-- Images -->
              <div class="form-group">
                <label for="images" class="lable-heading"
                  >Property Images</label
                >
                <input
                  type="file"
                  multiple
                  id="images"
                  name="images"
                  class="image-upload"
                />
                <small>Upload multiple images of your property</small>
              </div>

              <!-- Price -->
              <div class="form-group">
                <label for="price" class="lable-heading"
                  >Price per night*</label
                >
                <input type="number" id="price" name="price" min="1" required />
              </div>

              <!-- Rules -->
              <div class="form-group">
                <label class="lable-heading">House Rules</label>
                <div class="rules-group">
                  <div class="rules-item">
                    <input
                      type="checkbox"
                      id="petsAllowed"
                      name="rules[petsAllowed]"
                    />
                    <label for="petsAllowed">Pets Allowed</label>
                  </div>
                  <div class="rules-item">
                    <input
                      type="checkbox"
                      id="smokingAllowed"
                      name="rules[smokingAllowed]"
                    />
                    <label for="smokingAllowed">Smoking Allowed</label>
                  </div>
                  <div class="rules-item">
                    <input
                      type="checkbox"
                      id="partiesAllowed"
                      name="rules[partiesAllowed]"
                    />
                    <label for="partiesAllowed">Parties Allowed</label>
                  </div>
                  <div class="rules-item">
                    <input
                      type="checkbox"
                      id="childrenAllowed"
                      name="rules[childrenAllowed]"
                      checked
                    />
                    <label for="childrenAllowed">Children Allowed</label>
                  </div>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="form-group">
                <button type="submit" style="background: crimson">
                  Create Property
                </button>
              </div>
            </form>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End Begin Create property -->

        <!-- Footer -->
        <%-include("layout/footer.ejs")%>

        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
  </body>
</html>
