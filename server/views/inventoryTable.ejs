<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Inventory Table</title>

    <!-- Custom fonts for this template-->
    <link
      href="vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->

    <link href="stylesheet/css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .search-container {
        margin-bottom: 20px;
      }
      .action-buttons {
        text-align: center;
      }
      .action-buttons .btn {
        margin-right: 5px;
      }
      .table-responsive {
        overflow-x: auto;
      }
      .add-property-btn {
        white-space: nowrap;
      }
    </style>
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%-include("layout/sidebar.ejs")%>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%-include("layout/topbar.ejs")%>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Inventory Table -->
            <div class="container mt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <p class="fw-semibold text-dark fs-2">Property Management</p>
                  <a href="/add-property" class="btn btn-dark shadow-sm">
                    <i class="fas fa-plus me-1"></i> Add Property
                  </a>
                </div>
              
                <div class="input-group mb-4">
                  <span class="input-group-text bg-light"><i class="fas fa-search"></i></span>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Search properties..."
                    id="searchInput"
                  />
                </div>
              
                <div class="table-responsive">
                  <table class="table table-hover align-middle">
                    <thead class="table-light">
                      <tr class="text-nowrap">
                        <th>No</th>
                        <th>Property </th>
                        <th>Category</th>
                        <th>Room Type</th>
                        <th>Guests</th>
                        <th>Bedrooms</th>
                        <th>Beds</th>
                        <th>Bathrooms</th>
                        <th>Price</th>
                        <th>Created At</th>
                        <th class="text-center">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (data.length > 0) { %>
                        <% data.forEach((property, idx) => { %>
                          <tr>
                            <td class="text-center fw-bold" style="color: rgb(5, 129, 143);">
                              <%= (currentPage - 1) * 10 + idx + 1 %>
                            </td>
                            <td><%= property.propertyType %></td>
                            <td><%= property.category %></td>
                            <td><%= property.roomType %></td>
                            <td><%= property.capacity.guests %></td>
                            <td><%= property.capacity.bedrooms %></td>
                            <td><%= property.capacity.beds %></td>
                            <td><%= property.capacity.bathrooms %></td>
                            <td>â‚¹<%= property.price.toLocaleString() %></td>
                            <td><%= new Date(property.createdAt).toLocaleDateString() %></td>
                            <td class="text-center">
                              <a href="/inventoryTable/view/<%= property._id %>" class="btn btn-sm btn-outline-info me-1"  title="View">
                                <i class="fas fa-eye"></i>
                              </a>
                              <a href="/inventoryTable/edit/<%= property._id %>" class="btn btn-sm btn-outline-secondary me-1" title="Edit">
                                <i class="fas fa-edit"></i>
                              </a>
                              <a href="/inventoryTable/delete/<%= property._id %>" class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="fas fa-trash"></i>
                              </a>
                            </td>
                          </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="11" class="text-center text-muted">No properties found.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              
                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                  <nav class="mt-4" >
                    <ul class="pagination justify-content-center" >
                      <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>"  >
                          <a class="page-link" href="/inventoryTable?page=<%= i %>" ><%= i %></a>
                        </li>
                      <% } %>
                    </ul>
                  </nav>
                <% } %>
              </div>
              
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%-include("layout/footer.ejs")%>

        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
  </body>
</html>
